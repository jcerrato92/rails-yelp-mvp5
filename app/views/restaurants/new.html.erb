<h1>New Restaurant</h1>
<%= simple_form_for @restaurant do |f| %>
<%=  f.input :name, label: 'Restaurant name' %>
<%=  f.input :address, label: 'Address' %>
<%=  f.input :phone_number, label: 'Phone number' %>
<%=  f.input :category, label: 'Category', :collection => %w[chinese italian japanese french belgian] %>
<%=  f.button :submit %>
<% end %>
